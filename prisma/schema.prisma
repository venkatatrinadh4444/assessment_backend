datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client"
  output          = "../src/generated/prisma"
  moduleFormat  = "cjs"
}

model Paste {
  id            String   @id @default(cuid())
  content       String

  // Constraints
  expiresAt     DateTime?
  maxViews      Int?
  viewCount     Int      @default(0)

  createdAt     DateTime @default(now())

  @@index([expiresAt])
}
